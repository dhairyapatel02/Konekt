{
  "extends": "@konekt/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@socket/*": [
        "./socket/*"
      ],
      "@assets/*": [
        "./public/*"
      ],
      "@contexts/*": [
        "./contexts/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}